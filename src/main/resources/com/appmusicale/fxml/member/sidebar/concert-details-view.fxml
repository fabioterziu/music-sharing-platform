<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.web.WebView?>

<!-- MOSTRA CONCERTO -->

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appmusicale.controller.member.sidebar.ConcertDetailsController"
      spacing="0" style="-fx-background-color: #F8F9FA;">

    <stylesheets>
        <URL value="@../../../css/style.css" />
    </stylesheets>

    <!-- Sezione superiore FISSA (video e titolo) -->
    <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #F8F9FA;" VBox.vgrow="NEVER">
        <HBox spacing="20" alignment="TOP_LEFT">
            <!-- Video -->
            <VBox spacing="10" prefWidth="500" maxWidth="500">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Video del concerto" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="deleteConcertButton" text="Elimina concerto"
                            style="-fx-text-fill: #e74c3c; -fx-border-color: #e74c3c; -fx-background-color: transparent;"
                            onAction="#handleDeleteConcert" />
                </HBox>
                <!-- Container per video-->
                <StackPane fx:id="videoContainer" style="-fx-background-color: #000; -fx-border-color: #ccc; -fx-border-width: 1; -fx-min-width: 500; -fx-min-height: 281;">
                    <WebView fx:id="youtubePlayer" minWidth="500" minHeight="281" prefWidth="500" prefHeight="281"/>
                    <StackPane fx:id="videoOverlay" />
                </StackPane>
            </VBox>

            <!-- Titolo del concerto -->
            <VBox spacing="10" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                <Label text="Dettagli Concerto" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                <VBox style="-fx-padding: 10; -fx-background-color: #FFFFFF; -fx-border-color: #E3E6EB; -fx-border-width: 1; -fx-border-radius: 5;">
                    <Label text="Titolo:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                    <Label fx:id="concertTitleLabel" wrapText="true"
                           style="-fx-font-size: 18px; -fx-text-fill: #2C3E50; -fx-padding: 5 0 10 0;" />

                    <!-- Link youtube -->
                    <Hyperlink fx:id="youtubeLink" text="Apri su YouTube"
                               style="-fx-text-fill: #1E88E5; -fx-font-size: 14px; -fx-border-color: transparent; -fx-padding: 5 0 0 0;"
                               onAction="#openYouTubeInBrowser"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- Sezione centrale SCORREVOLE (form e lista brani) -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: #F8F9FA;" fx:id="tracksSection">
        <VBox spacing="20" style="-fx-padding: 0 20 20 20;">
            <!-- Form per aggiungere brani -->
            <VBox spacing="15" style="-fx-padding: 10; -fx-background-color: #FFFFFF; -fx-border-color: #E3E6EB; -fx-border-width: 1; -fx-border-radius: 5;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Aggiungi nuovo brano" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                    <!-- Area messaggi spostata a destra -->
                    <Label fx:id="formMessageLabel" text="" style="-fx-text-fill: #d9534f; -fx-font-size: 14px; -fx-wrap-text: true; -fx-max-width: 300;" HBox.hgrow="ALWAYS" />
                </HBox>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="20" />
                        <ColumnConstraints percentWidth="20" />
                        <ColumnConstraints percentWidth="10" halignment="CENTER"/>
                    </columnConstraints>

                    <Label text="Titolo brano:" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Artista:" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Label text="Inizio:" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <Label text="Fine:" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <TextField fx:id="trackTitleField" promptText="Titolo del brano" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="authorField" promptText="Nome artista" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="startTimeField" promptText="hh:mm:ss" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="endTimeField" promptText="hh:mm:ss" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    <Button text="Aggiungi" styleClass="secondary-button" onAction="#handleAddTrack"
                            GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Lista brani -->
            <VBox spacing="10">
                <Label text="Brani del concerto" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                <!-- Intestazione colonne -->
                <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-background-color: #E3E6EB; -fx-background-radius: 5;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="15" />
                        <ColumnConstraints percentWidth="15" />
                        <ColumnConstraints percentWidth="15" halignment="CENTER"/>
                    </columnConstraints>

                    <Label text="Titolo" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="0"/>
                    <Label text="Artista" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="1"/>
                    <Label text="Inizio" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="2"/>
                    <Label text="Fine" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="3"/>
                    <Label text="Azioni" style="-fx-font-weight: bold; -fx-padding: 5;"
                           GridPane.columnIndex="4"/>
                </GridPane>

                <!-- Lista brani -->
                <GridPane fx:id="tracksGrid" hgap="10" vgap="10" style="-fx-padding: 10; -fx-background-color: #FFFFFF;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="15" />
                        <ColumnConstraints percentWidth="15" />
                        <ColumnConstraints percentWidth="15" halignment="CENTER"/>
                    </columnConstraints>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>