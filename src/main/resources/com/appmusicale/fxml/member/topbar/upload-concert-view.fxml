<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!--VISTA COMPONENTE CARICA CONCERTO -->

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appmusicale.controller.member.topbar.UploadConcertController"
      spacing="20" style="-fx-background-color: #f5f7fa; -fx-padding: 20;" alignment="CENTER" >

    <stylesheets>
        <URL value="@../../../css/style.css" />
    </stylesheets>

    <!-- Titolo -->
    <Label text="Carica un concerto" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Container per link e pulsante -->
    <HBox spacing="15" alignment="CENTER" >
        <TextField fx:id="youtubeLinkField" promptText="Inserisci il link Youtube del concerto"
                   prefWidth="400" styleClass="search-bar" />
        <Button fx:id="uploadButton" text="Carica" styleClass="confirm-button" onAction="#handleUpload" />
    </HBox>

    <!-- Messaggio di stato -->
    <VBox fx:id="messageContainer" alignment="CENTER" spacing="5" visible="false">
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #d9534f; -fx-wrap-text: true; -fx-max-width: 400; -fx-alignment: center;" />
        <ProgressIndicator fx:id="progressIndicator" visible="false" />
    </VBox>

</VBox>
