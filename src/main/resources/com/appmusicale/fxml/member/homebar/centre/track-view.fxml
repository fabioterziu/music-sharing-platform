<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<!-- TRACCIA -->

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.appmusicale.controller.member.homebar.centre.TrackController"
            style="-fx-background-color: #f5f7fa; -fx-border-color: transparent;" fitToWidth="true">

    <VBox spacing="20" style="-fx-padding: 20;">

        <!-- Intestazione con tasto indietro, copertina e informazioni -->
        <Button text="â† Indietro" onAction="#handleBackButton" styleClass="secondary-button"
                style="-fx-margin: 0 0 20 0; -fx-pref-width: 100;"/>
        <HBox spacing="20" alignment="TOP_LEFT">

            <!-- Copertina -->
            <ImageView fx:id="coverImage" fitWidth="200" fitHeight="200" preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" />

            <!-- Informazioni brano -->
            <VBox spacing="10" alignment="TOP_LEFT">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="titleLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="deleteTrackButton" text="Elimina brano"
                            style="-fx-text-fill: #e74c3c; -fx-border-color: #e74c3c; -fx-background-color: transparent;"
                            onAction="#handleDeleteTrack" />
                </HBox>
                <Label fx:id="artistLabel" style="-fx-text-fill: #7f8c8d; -fx-font-size: 18px;" />
                <GridPane hgap="10" vgap="8" style="-fx-padding: 10 0 0 0;">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="200" />
                    </columnConstraints>

                    <Label text="Anno:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="yearLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Genere:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="genreLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Esecutori:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="performersLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Strumenti:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="instrumentsLabel" style="-fx-text-fill: #2c3e50;" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Link YouTube:" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <Hyperlink fx:id="youtubeLink" style="-fx-text-fill: #1976d2; -fx-border-color: transparent; -fx-underline: true;" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>
        </HBox>

        <!-- Layout per documenti, multimedia e note -->
        <HBox spacing="20" alignment="TOP_LEFT" fillHeight="true">
            <!-- Colonna sinistra: Documenti e Multimedia -->
            <VBox spacing="20" prefWidth="350" VBox.vgrow="ALWAYS">
                <!-- Documenti -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="350" VBox.vgrow="ALWAYS">
                    <Label text="Documenti" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <VBox fx:id="documentsList" spacing="5" style="-fx-padding: 10 0" VBox.vgrow="ALWAYS"/>
                    <Button text="Carica nuovo documento" styleClass="secondary-button" onAction="#handleUploadDocument" />
                </VBox>

                <!-- File multimediali -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="350" VBox.vgrow="ALWAYS">
                    <Label text="File Multimediali" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <VBox fx:id="multimediaList" spacing="10" style="-fx-padding: 10 0;" VBox.vgrow="ALWAYS"/>
                    <Button text="Carica nuovo file multimediale" styleClass="secondary-button" onAction="#handleUploadMultimedia" />
                </VBox>
            </VBox>

            <!-- Colonna destra: note (occupa tutta l'altezza) -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                <Label text="Note sui caricati" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- Campo per inserire una nuova nota con tempi di inizio e fine -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="newNoteField" promptText="Lascia una nota" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="startTimeField" promptText="Inizio (mm:ss)" style="-fx-pref-width: 100;" />
                    <Label text="-" style="-fx-text-fill: #2c3e50;" />
                    <TextField fx:id="endTimeField" promptText="Fine (mm:ss)" style="-fx-pref-width: 100;" />
                    <Button text="Invia" styleClass="secondary-button" onAction="#handleAddNote" />
                </HBox>

                <VBox fx:id="notesList" spacing="5" style="-fx-padding: 10 0; -fx-vgrow: ALWAYS;" VBox.vgrow="ALWAYS" maxWidth="Infinity"/>
            </VBox>
        </HBox>

        <!-- Commenti -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;
      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" VBox.vgrow="ALWAYS" maxWidth="Infinity">
            <Label text="Commenti" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />

            <Label fx:id="replyHintLabel" text="Doppio click per rispondere"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="newCommentField" promptText="Lascia un commento" HBox.hgrow="ALWAYS" />
                <Button text="Invia" styleClass="secondary-button" onAction="#handleAddComment" />
                <Button fx:id="cancelReplyButton" text="Annulla risposta" styleClass="secondary-button"
                        onAction="#handleCancelReply" visible="false" />
            </HBox>

            <VBox fx:id="commentsList" spacing="10" style="-fx-padding: 10 0;" VBox.vgrow="ALWAYS" maxWidth="Infinity"/>
        </VBox>

    </VBox>

</ScrollPane>