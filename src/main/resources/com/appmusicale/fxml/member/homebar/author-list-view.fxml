<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!-- TRACCE DELL' AUTORE -->

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appmusicale.controller.member.homebar.AuthorListController"
      VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">

    <stylesheets>
        <URL value="@../../../css/style.css" />
    </stylesheets>

    <!-- Pulsante back e titolo del genere -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-padding: 20; -fx-background-color: c3cad5;">
        <Button fx:id="backButton" onAction="#handleBackButton" text="← Torna agli Autori" styleClass="primary-button" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="authorTitleLabel" styleClass="list-title" />
    </HBox>

    <!-- Griglia per tracce -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                style="background: white; -fx-background-color: transparent;">
        <GridPane fx:id="tracksGrid" hgap="20" vgap="20"
                  style="-fx-padding: 20; -fx-background-color: white;">
            <columnConstraints>
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="20" />
            </columnConstraints>
        </GridPane>
    </ScrollPane>

</VBox>
