<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.control.Label?>

<!-- MOSTRA MULTMEDIA -->

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.appmusicale.controller.member.homebar.centre.MultimediaController">

    <!--CENTRO-->
    <center>
        <StackPane fx:id="mediaContainer"
            style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
            <ImageView fx:id="imageView" preserveRatio="true" />
            <MediaView fx:id="mediaView" preserveRatio="true" />
        </StackPane>
    </center>

    <!--BARRA DI CONTROLLO-->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: transparent;">
            <children>
                <!-- BOTTONE PLAY/PAUSE -->
                <Button fx:id="ssButton" onAction="#ssMedia"
                        text="â–¶"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24;" />

                <!-- TEMPO TRASCORSO -->
                <Label fx:id="currentTime" text="00:00" style="-fx-text-fill: white;" />

                <!-- SLIDER DI PROGRESSO -->
                <Slider fx:id="progressSlider" prefHeight="16.0"
                        style="-fx-focus-color: white; -fx-faint-focus-color: white;"
                        HBox.hgrow="ALWAYS" />

                <!-- DURATA TOTALE -->
                <Label fx:id="totalTime" text="00:00" style="-fx-text-fill: white;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
